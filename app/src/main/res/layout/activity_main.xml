<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EEB2"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/provinces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/provinces"
        android:textSize="20sp"
        android:textStyle="bold"

        />

    <Spinner
        android:id="@+id/spinner_provinces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="@string/provinces_du_canada"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/villes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/villes"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_villes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:contentDescription="@string/villes_choisie"
        android:minHeight="48dp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="3dip"
        android:contentDescription="@string/province_flag"
        android:scaleType="center"
        android:src="@drawable/quebec" />

</LinearLayout>